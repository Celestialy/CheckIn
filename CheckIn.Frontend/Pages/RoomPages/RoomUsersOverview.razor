@page "/roomoverview/room/{roomId:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@if (Room == null)
{
    <div class="mat-blazor-demo-theme-app-row">
        <MatProgressBar Indeterminate="true"></MatProgressBar>
    </div>
}
else
{
    <center>
        <h2>@Room.RoomName</h2>

        <br />

        <div class="row">
            @foreach (var student in students)
            {
                <div class="col" style="flex-grow: 0">
                    <MatCard class="demo-mat-card">
                        <MatCardContent>
                            <MatButton Raised="true" Style="margin-bottom:20px; height:75px; font-size:x-large;" Class="@student.Status" OnClick="(e => NavigateUserAnnualOverview(student.CardId))">@student.Name</MatButton>
                        </MatCardContent>
                    </MatCard>
                </div>
            }
        </div>
    </center>

    <MatFAB Style="background-color: #448AFF; float:right;" Icon="@MatIconNames.Edit" OnClick="ManageRoom"></MatFAB>
}